  body
    div#device
      div#display
        div#matrix.panel
          include includes/matrix.pug
        div#colorpicker.panel
          include includes/colorpicker.pug
        div#info.panel
          include includes/info.pug
      div#controls
        div.button.mirroring-toggle
          a.icon
            include icons/mirroring.svg
        div.button.colorpicker-toggle
          a.icon
            div.switcher
              include icons/colorpicker.svg
              include icons/eraser.svg
        div.button.info-toggle
          a.icon
            include icons/info.svg

    script(src='https://cdn.firebase.com/js/client/2.2.1/firebase.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
