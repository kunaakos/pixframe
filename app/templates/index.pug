html.no-js
  head
    meta(charset='utf-8')
    title pix.pub
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
    meta(name='description' content='')
    link(rel='stylesheet' href='http://fonts.googleapis.com/css?family=Source+Code+Pro:400,700' type='text/css')
